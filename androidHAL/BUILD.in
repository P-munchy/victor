cxx_project(
    name = 'androidHAL',
    srcs = cxx_src_glob(['.'],
                        excludes = ['*_android.*',
                                    'android/**/*',
                                    '*_mac.*']),
    platform_srcs = [
        ('android', glob(['android/**/*.cpp',
                          '**/*_android.cpp'])),
        ('mac', glob(['**/*_mac.cpp']))
    ],
    headers = cxx_header_glob(['.']),
    platform_headers = [
        ('android', glob(['**/*.h']))
    ]
)
