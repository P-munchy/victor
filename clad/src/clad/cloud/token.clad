namespace Anki {
namespace Cozmo {

enum uint_8 TokenError {
	NoError,
	NullToken,
	InvalidToken,
	Connection
}

structure AuthRequest {
	string[uint_16] sessionToken
}

structure AuthResponse {
	string[uint_16] appToken,
	string[uint_16] jwtToken,
	TokenError error
}

structure JwtRequest {
}

structure JwtResponse {
	string[uint_16] jwtToken,
	TokenError error
}

union TokenRequest {
	AuthRequest auth,
	JwtRequest jwt
}

union TokenResponse {
	AuthResponse auth,
	JwtResponse jwt
}

}
}
