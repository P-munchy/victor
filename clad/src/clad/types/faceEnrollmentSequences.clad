namespace Anki {
namespace Cozmo {

enum uint_8 FaceEnrollmentSequence {
    Simple       = 0,  // Sit still and look at user
    BackAndForth = 1,  // Move forward and backward to get enrollments at different scales
    Immediate    = 2,  // Don't do anything: immediately enroll with whatever already exists for ID

    Default = 0
}

} // namespace Cozmo
} // namespace Anki
