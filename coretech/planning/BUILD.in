
cxx_project(
  name = 'cti_planning',
  srcs = cxx_src_glob(['engine', 'shared']),
  platform_srcs = [
    ('android', glob(['engine/**/*_android.cpp', 'shared/**/*_android.cpp']))
  ],
  headers = cxx_header_glob(['engine', 'shared']),
  platform_headers = [
    ('android', glob(['engine/**/*_android.h', 'shared/**/*_android.h']))
  ]
)

