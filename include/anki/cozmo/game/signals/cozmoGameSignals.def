// Definition of signals emitted from/within CozmoGame.
//
// All definitions should look like
//
//   DEF_SIGNAL( <Signal name>, <args of the signals> )
//
//   e.g. DEF_SIGNAL(ConnectToRobot, RobotID_t robotID)
//

#include "anki/cozmo/basestation/signals/SignalDefMacros.h"

// Tell game host to connect to robot
DEF_SIGNAL(ConnectToRobot, RobotID_t robotID)
    
// Tell game host to connect to a UI device
DEF_SIGNAL(ConnectToUiDevice, UserDeviceID_t deviceID)

// Signal that a UI device is available for connection
DEF_SIGNAL(UiDeviceAvailable, UserDeviceID_t deviceID)

// Signal that a UI device actually connected
DEF_SIGNAL(UiDeviceConnected, UserDeviceID_t deviceID, bool successful)

