      "scoreGraph": {
        "nodes": [
          {
            "x": -1.0,
            "y": 0.1
          },
          {
            "x": 1.0,
            "y": 0.1
          }
        ]
      },
      "trackDelta": false
    }
  ],  
  "behaviorGroups": [
    "Demo",
    "DemoFaces",
    "DemoRequestSpeedTap"
  ],
  
  // -- configuration parameters for ExploreLookAroundInPlace
  "params":
  {
    "behavior_ShouldResetTurnDirection": false,
    "behavior_DistanceFromRecentLocationMin_mm": 300.0,
    "behavior_RecentLocationsMax": 5,
    // shared speeds
    "sx_BodyTurnSpeed_degPerSec": 60.0,   // turn speed
    "sxt_HeadTurnSpeed_degPerSec": 25.0,  // head tilt speed while turning body
    "sxh_HeadTurnSpeed_degPerSec": 40.0,  // head tilt speed for states that don't turn body
    
    // state 0 - initialization parameters (this happen once per behavior run)
    "s0_MainTurnCWChance": 0.5,           // chance to CW vs CCW
    
    // state 1 - body turn in opposite direction
    "s1_BodyAngleRangeMin_deg":  10.0,
    "s1_BodyAngleRangeMax_deg":  30.0,
    "s1_HeadAngleRangeMin_deg":  25.0,  // head min back turn
    "s1_HeadAngleRangeMax_deg":  42.0,  // head max back turn
    
    // state 2 - wait at that location
    "s2_WaitMin_sec": 0.50,
    "s2_WaitMax_sec": 1.25,
    
    // state 3 - body turn in fwd direction (#1/2)
    "s3_BodyAngleRangeMin_deg":  5.0,
    "s3_BodyAngleRangeMax_deg": 25.0,
    "s3_HeadAngleRangeMin_deg": 30.0,   // head min fwd turn #1
    "s3_HeadAngleRangeMax_deg": 42.0,   // head max fwd turn #1
    
    // state 4 - head angle changes in place (no body turn)
    "s4_HeadAngleRangeMin_deg": 10.0,   // head min in place
    "s4_HeadAngleRangeMax_deg": 30.0,   // head max in place
    "s4_HeadAngleChangesMin":  2,
    "s4_HeadAngleChangesMax":  4,
    
    // state 5 - head angle change (no body turn), here to undo what state 4 does randomly, resetting head angle before 6
    "s5_HeadAngleRangeMin_deg": 20.0,   // head min
    "s5_HeadAngleRangeMax_deg": 40.0,   // head max
    
    // state 6 - body turn in fwd direction (#2/2)
    "s6_BodyAngleRangeMin_deg":  30.0,
    "s6_BodyAngleRangeMax_deg":  65.0,
    "s6_HeadAngleRangeMin_deg": 25.0,  // head min fwd turn #2
    "s6_HeadAngleRangeMax_deg": 42.0   // head max fwd turn #2
  }
  
