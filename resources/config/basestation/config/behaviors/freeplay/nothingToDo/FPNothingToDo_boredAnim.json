//
// NothingToDo_Idle
// This behavior triggers when Cozmo has nothing to do. Play animations set up for bored status (breakout, pendulum, ..)
//
//
//
{
  "name": "NothingToDo_BoredAnim",

  "behaviorClass": "PlayAnim",
  "displayNameKey":"behavior.Bored",
  "flatScore": 1.0,
  "behaviorGroups": [
    "FP_NothingToDo"
  ],
  
  // we set some repetition penalty so that we Idle normally after playing a bored-game sequence
  "repetitionPenalty": {
    "nodes": [
      {
        "x": 0.0,
        "y": 0.5
      },
      {
        "x": 9.0,
        "y": 1.0
      }
    ]
  },
  
  // sequence of anims
  "animTriggers": [
    "NothingToDoBoredIntro",
    "NothingToDoBoredEvent",
    "NothingToDoBoredOutro"
  ]
}
