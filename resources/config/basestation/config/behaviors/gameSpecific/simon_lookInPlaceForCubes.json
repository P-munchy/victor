{
    // Run by name during simon setup
  "behaviorType": "ExploreLookAroundInPlace",
  "name": "simon_lookInPlaceForCubes",
  "flatScore": 0.4,
  "behaviorGroups": [
  ],

  // -- configuration parameters for ExploreLookAroundInPlace
  "params":
  {
    "behavior_ShouldResetTurnDirection": false,
    "behavior_ShouldLowerLift": true,
    "behavior_DistanceFromRecentLocationMin_mm": 40.0,
    "behavior_RecentLocationsMax": 1,
    "behavior_AngleOfFocus_deg": 45.0,
    
    // shared speeds
    "sx_BodyTurnSpeed_degPerSec": 270.0,   // turn speed
    "sxt_HeadTurnSpeed_degPerSec": 80.0,  // head tilt speed while turning body
    "sxh_HeadTurnSpeed_degPerSec": 200.0,  // head tilt speed for states that don't turn body
    
    // state 0 - initialization parameters (this happen once per behavior run)
    "s0_MainTurnCWChance": 0.0,           // chance to CW vs CCW
    
    // state 1 - body turn in opposite direction
    "s1_BodyAngleRangeMin_deg":  30.0,
    "s1_BodyAngleRangeMax_deg":  35.0,
    "s1_HeadAngleRangeMin_deg":  -20.0,  // head min back turn
    "s1_HeadAngleRangeMax_deg":  -18.0,  // head max back turn
    
    // state 2 - wait at that location
    "s2_WaitMin_sec": 0.10,
    "s2_WaitMax_sec": 0.20,
    "s2_WaitAnimGroupName": "ag_lookInPlaceForFaces_bodyMovePause",
    
    // state 3 - body turn in fwd direction (#1/2)
    "s3_BodyAngleRangeMin_deg":  30.0,
    "s3_BodyAngleRangeMax_deg": 35.0,
    "s3_HeadAngleRangeMin_deg": -20.0,   // head min fwd turn #1
    "s3_HeadAngleRangeMax_deg": -18.0,   // head max fwd turn #1
    
    // Simon setup should skip stages 4,5 since s4_HeadAngleChangesMin/Max is 0
    // state 4 - head angle changes in place (can have body mini-turn)
    "s4_BodyAngleRelativeRangeMin_deg" : 1.0, // +- body mini-turn from [min,max]
    "s4_BodyAngleRelativeRangeMax_deg" : 10.0, // +- body mini-turn from [min,max]
    "s4_HeadAngleRangeMin_deg":  -20.0,   // head min in place
    "s4_HeadAngleRangeMax_deg": -18.0,   // head max in place
    "s4_HeadAngleChangesMin":  0,
    "s4_HeadAngleChangesMax":  0,
    "s4_WaitBetweenChangesMin_sec" : 0.01,
    "s4_WaitBetweenChangesMax_sec" : 0.02,
    "s4_WaitAnimGroupName": "ag_lookInPlaceForFaces_headMovePauses",
    
    // state 5 - head angle change (can have body mini-turn), here to undo what state 4 does randomly, resetting head angle before 6
    "s5_BodyAngleRelativeRangeMin_deg" : 1.0, // +- body mini-turn from [min,max]
    "s5_BodyAngleRelativeRangeMax_deg" : 10.0, // +- body mini-turn from [min,max]
    "s5_HeadAngleRangeMin_deg": -20.0,   // head min
    "s5_HeadAngleRangeMax_deg": -18.0,   // head max
    
    // state 6 - body turn in fwd direction (#2/2)
    "s6_BodyAngleRangeMin_deg":  30.0,
    "s6_BodyAngleRangeMax_deg":  35.0,
    "s6_HeadAngleRangeMin_deg": -18.0,  // head min fwd turn #2
    "s6_HeadAngleRangeMax_deg": -20.0   // head max fwd turn #2
  }
  
}
