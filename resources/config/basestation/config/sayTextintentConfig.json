// SayTextIntent & SayTextVoiceStyle are defined in clad/types/sayTextStyles.clad
// Example intent config
//"<SayTextIntent>" : {
//	"durationTraits" : [ // List of duration traits
//    ... See trait below
//	],
//	"pitchTraits" : [		// List of pitch traits
//		... See trait below
//	],
//	"style" : "<SayTextVoiceStyle>"
//}
// Example of duration & pitch trait
//{
//  Text length that trait applies to
//	"textLengthMax"	: 0, // Default val = 0
//	"textLengthMin" : 7, // Default val = uint max
//	Range trait can randomly chose from
//	"rangeMin" : 1.9,		 // Defailt val = float min
//	"rangeMax" : 2.1,		 // Defailt val = float max
//  Size of "bucket"
//  example: the range above with 0.1 step size will create 2 buckets, [1.9, 2.0] & [2.0, 2.1]
//	"stepSize" : 0.1		 // [0, ..) Defailt val = 0
//}
// If step size == 0 random value will not be used, rangeMin will be used as the trait's value


