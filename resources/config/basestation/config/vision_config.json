    "TimeBetweenProfilerDasLogs_sec"    : 120  // How often to log Profiler DAS events
  },
  
  "PetTracker" :
  {
    "MaxPets"             : 4,    // Detectable/trackable at the same time
    "MinFaceSize"         : 60,
