{
  "behaviorClass": "ReactToVoiceCommand",
  "behaviorID": "SleepingTriggerWord",

  "associatedActiveFeature": "NoFeature",
  "behaviorStatToIncrement": "ReactedToTriggerWord",

  "notifyOnErrors": {
    "recentOccurrence": {
      // trigger error notification immediately
      "numberOfTimes": 1
      // seconds don't matter with numberOfTimes = 1
      // "amountOfSeconds": 300.0
    }
  },
  
  "earConAudioEventBegin"   : "Play__Robot_Vic_Sfx__Wake_Word_On",
  "earConAudioEventSuccess" : "Play__Robot_Vic_Sfx__Wake_Word_Success",
  "animListeningGetIn"      : "VC_SleepingToListeningGetIn",
  "animListeningLoop"       : "VC_SleepingToListeningLoop",
  "animListeningGetOut"     : "VC_SleepingToListeningGetOut",
  "backpackLights"          : true,

  "behaviorOnIntent"        : "ReactToTriggerDirectionAwake",
  
  "exitAfterListeningIfNotStreaming" : true,

  // this instance is always in scope, except for low battery, onboarding, and quiet/shutup modes,
  // so send trigger events and also accumulate and send DAS events when in scope
  "dasType": "TriggerAndStats"
}
