{
  "activityID" : "StrictPriorityFreeplay",
  "activityType" : "StrictPriority",
  // Activity will be kicked out by behaviorManager
  "activityStrategy":
  {
    "type" : "Simple"
  },
  // sub-activities to create - ensure they're in priority order
  "subActivities" :
  [
    // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // Freeplay activities:
    // socialize            - when Cozmo wants to interact with faces and players, but without playing games
    // playWithHumans       - when Cozmo requests games to play with the player
    // buildPyramid         - when Cozmo knows where his cubes are and decides to build a pyramid
    // playAlone            - when Cozmo does stuff in place on his own, showing off, playing with cubes, ..
    // hiking               - when Cozmo is exploring its surroundings on his own
    // nothingToDo          - fallback when Cozmo can't do anything else
    // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    // - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    { "activityID" : "Socialize", "activityPriority"            : 11},
    { "activityID" : "Singing", "activityPriority"              : 12},
    { "activityID" : "PlayWithHumans", "activityPriority"       : 13},
    // pyramid is "cooler" than playing alone or hiking for the user, but it
    // has fairly restrictive runnability and a high cooldown
    { "activityID" : "BuildPyramid", "activityPriority"         : 14},
    { "activityID" : "PlayAlone", "activityPriority"            : 15},
    { "activityID" : "Hiking", "activityPriority"               : 16},
    { "activityID" : "NothingToDo", "activityPriority"          : 17}
  ]
}
