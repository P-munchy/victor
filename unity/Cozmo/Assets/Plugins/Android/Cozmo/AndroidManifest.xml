<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
          xmlns:amazon="http://schemas.amazon.com/apk/res/android"
	  package="com.anki.cozmo" >

	<!-- This manifest will be merged automatically with the one generated by Unity so we only need
	 	 to specify here the new things we need -->
		  
	<!-- This is needed to access the WiFi manager and get the IP address -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application>
        <meta-data android:name="dasVersionName" android:value="1.0" />
        <meta-data android:name="HOCKEYAPP_APP_ID" android:value="" />
    </application>  
</manifest>
